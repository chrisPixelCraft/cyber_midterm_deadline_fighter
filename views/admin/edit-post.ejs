<% if (data) { %>
<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn" />
  </form>
</div>

<form action="/edit-post/<%= post._id %>?_method=PUT" method="POST">
  <label for="title"><b>Title</b></label>
  <input
    type="text"
    placeholder="Post Title"
    name="title"
    value="<%= data.title %>"
  />

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= post.body %></textarea>

  <input type="submit" value="Update" class="btn" />
</form>
<% } else { %>
<div class="error-message">
  <p>You do not have permission to edit this post, or it does not exist.</p>
  <a href="/dashboard">Return to Dashboard</a>
</div>
<% } %>
